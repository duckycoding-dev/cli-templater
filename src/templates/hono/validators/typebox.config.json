{
  "name": "TypeBox Validator",
  "description": "TypeBox schema validation for Hono",
  "author": "DuckyCoding",
  "placeholders": {
    "validatorImports": {
      "value": ["import { tbValidator } from '@hono/typebox-validator'"],
      "description": "The imports to include"
    },
    "validationBody": {
      "description": "The validation middlweware for the request body",
      "value": "tbValidator('json', {{create{{Entity}}Schema}})"
    },
    "validationBodyPATCH": {
      "description": "The validation middlweware for the request body of a PATCH request",
      "value": "tbValidator('json', T.Partial({{create{{Entity}}Schema}}))"
    },
    "validationParams": {
      "description": "The validation middlweware for parameters",
      "value": "tbValidator('param', T.Pick({{Entity}}Schema), ['id'])"
    },
    "schema": {
      "description": "The schema of the entity",
      "value": ["const {{entity}}Schema = T.object({", "id: T.String()", "});"]
    },
    "parseEntityBody": {
      "description": "The parsing of the request body",
      "value": "= c.req.valid('json');"
    },
    "parsePathParams": {
      "description": "The parsing of the request path params",
      "value": "= c.req.valid('param');"
    },
    "parsePathParamsResult": {
      "description": "The value generated by the parsing",
      "value": "pathParams"
    },
    "createSchema": {
      "description": "The schema for creating a new entity",
      "value": "const create{{Entity}}Schema = T.Omit({{entity}}Schema, ['id']);"
    },
    "type": {
      "description": "The type of the entity",
      "value": "export type {{Entity}} = Static<typeof {{entity}}Schema>;"
    },
    "createType": {
      "description": "The type of the entity used for creation operations",
      "value": "export type Create{{Entity}} = Static<typeof create{{Entity}}Schema>;"
    },
    "typesImports": {
      "description": "The imports to include for the types file",
      "value": "import { Type as T } from '@sinclair/typebox'"
    }
  },
  "dependencies": {
    "@hono/typebox-validator": "^0.3.1",
    "@sinclair/typebox": "^0.24.31"
  },
  "devDepencencies": {}
}
