{
  "name": "Zod Validator",
  "description": "Zod schema validation for Hono",
  "author": "DuckyCoding",
  "placeholders": {
    "validatorImports": {
      "value": ["import { zValidator } from '@hono/zod-validator';"],
      "description": "The imports to include"
    },
    "validationBody": {
      "description": "The validation middlweware for the request body",
      "value": "zValidator('json', create{{Entity}}Schema)"
    },
    "validationBodyPATCH": {
      "description": "The validation middlweware for the request body of a PATCH request",
      "value": "zValidator('json', create{{Entity}}Schema.partial())"
    },
    "validationParams": {
      "description": "The validation middlweware for parameters",
      "value": "zValidator('param', {{entity}}Schema.pick({ id: true }))"
    },
    "schema": {
      "description": "The schema of the entity",
      "value": [
        "const {{entity}}Schema = z.object({",
        "id: z.string().uuid()",
        "});"
      ]
    },
    "parseEntityBody": {
      "description": "The parsing of the request body",
      "value": "= c.req.valid('json');"
    },
    "parsePathParams": {
      "description": "The parsing of the request path params",
      "value": "= c.req.valid('param');"
    },
    "parsePathParamsResult": {
      "description": "The value generated by the parsing",
      "value": "pathParams"
    },
    "createSchema": {
      "description": "The schema for creating a new entity",
      "value": "const create{{Entity}}Schema = {{entity}}Schema.omit({ id: true });"
    },
    "type": {
      "description": "The type of the entity",
      "value": "export type {{Entity}} = z.infer<typeof {{entity}}Schema>;"
    },
    "createType": {
      "description": "The type of the entity used for creation operations",
      "value": "export type Create{{Entity}} = z.infer<typeof create{{Entity}}Schema>;"
    },
    "typesImports": {
      "description": "The imports to include for the types file",
      "value": "import { z } from 'zod';"
    }
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.2",
    "zod": "^3.24.1"
  },
  "devDepencencies": {}
}
